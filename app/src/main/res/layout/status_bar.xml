<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_marginLeft="@dimen/view_space_3"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/view_space_45"
        android:layout_height="@dimen/view_space_45"
        android:gravity="center">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:padding="2sp"
            android:src="@drawable/ic_app_logo_free" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/status_bar_icon"
            android:layout_width="@dimen/status_bar_album_art"
            android:layout_height="@dimen/status_bar_album_art"
            android:background="@color/quantum_yellow"
            android:scaleType="center"
            android:src="@drawable/play"
            android:visibility="gone" />

        <TextView
            android:id="@+id/status_bar_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/app_name"
            android:textColor="@color/colorYellow"
            android:textSize="@dimen/txt_size_12"
            android:visibility="visible" />

        <!--<LinearLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_weight="1"-->
        <!--android:orientation="vertical"-->
        <!--android:paddingLeft="@dimen/status_bar_button_info_container_padding_left" >-->
        <!---->
        <!--<TextView-->
        <!--android:id="@+id/status_bar_artist_name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

        <!--</LinearLayout>-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/status_bar_prev"
                android:layout_width="@dimen/view_space_50"
                android:layout_height="@dimen/view_space_50"
                android:layout_marginLeft="@dimen/view_space_8"
                android:contentDescription="@string/next"
                android:padding="@dimen/view_space_5"
                android:src="@drawable/play_previous"
                android:tint="@color/colorYellow" />

            <ImageView
                android:id="@+id/status_bar_play"
                android:layout_width="@dimen/view_space_50"
                android:layout_height="@dimen/view_space_50"
                android:contentDescription="@string/the_quran"
                android:padding="@dimen/view_space_5"
                android:src="@drawable/play"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/status_bar_next"
                android:layout_width="@dimen/view_space_50"
                android:layout_height="@dimen/view_space_50"
                android:contentDescription="@string/next"
                android:padding="@dimen/view_space_5"
                android:src="@drawable/play_next"
                android:tint="@color/colorYellow" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/status_bar_collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="2sp"
        android:src="@drawable/cancel"
        android:tint="@color/colorYellow"
        android:visibility="visible" />
</RelativeLayout>