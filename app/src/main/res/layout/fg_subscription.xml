<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/view_space_10"
            android:gravity="center"
            android:orientation="vertical">

            <include layout="@layout/view_header_logo"></include>

            <LinearLayout
                android:id="@+id/lnr_btn_trial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_30"
                android:layout_marginBottom="@dimen/view_space_20"
                android:background="@drawable/bg_btn_border_yellow"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_btn_img"
                    android:gravity="center"
                    android:padding="@dimen/view_space_8"
                    android:text="Limited Time offer"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/txt_size_18" />

                <TextView
                    android:id="@+id/txt_trial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:gravity="center"
                    android:padding="@dimen/view_space_8"
                    android:text="14 Days Free Trial"
                    android:textColor="@color/colorPerfectYellow"
                    android:textSize="@dimen/txt_size_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lnr_btn_plan1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/view_space_3"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_border_yellow"
                    android:orientation="vertical"
                    android:padding="@dimen/view_space_5">

                    <TextView
                        android:id="@+id/txt_price_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$2.49"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/txt_size_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Per month"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/txt_size_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/txt_size_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_btn_plan2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/view_space_3"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_yellow"
                    android:orientation="vertical"
                    android:padding="@dimen/view_space_5">

                    <TextView
                        android:id="@+id/txt_price_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$14.00"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txt_size_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Per Year"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txt_size_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txt_size_14" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/bg_btn_yellow"
                android:text="Choose your plan"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>