<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:paddingTop="@dimen/base_activity_top_space">

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlt_bottom"
        android:layout_marginStart="@dimen/view_space_5"
        android:layout_marginTop="@dimen/view_space_5"
        android:layout_marginEnd="@dimen/view_space_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="0.95"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_prayer_req"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_margin="@dimen/community_space_board"
                android:id="@+id/btn_mosque"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_yellow">

                <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mosque_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    android:background="@color/colorBlackTransperent"
                    android:gravity="center"
                    android:padding="@dimen/view_space_1_5"
                    android:text="@string/mosque"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="@dimen/community_space_board"
                android:id="@+id/btn_restaurant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_yellow">

                <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/res_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    android:background="@color/colorBlackTransperent"
                    android:gravity="center"
                    android:padding="@dimen/view_space_1_5"
                    android:text="@string/restaurant"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_14" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/community_space_board"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/btn_prayer_req"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_btn_yellow">

                <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/prayer_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    android:background="@color/colorBlackTransperent"
                    android:gravity="center"
                    android:padding="@dimen/view_space_1_5"
                    android:text="@string/prayer_request"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_14" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.95"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_prayer_req"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_margin="@dimen/community_space_board"
                android:id="@+id/btn_qurbani"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_yellow">

                <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/quarbani_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    android:background="@color/colorBlackTransperent"
                    android:gravity="center"
                    android:padding="@dimen/view_space_1_5"
                    android:text="@string/qurbani"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="@dimen/community_space_board"
                android:id="@+id/btn_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_yellow">

                <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/events_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    android:background="@color/colorBlackTransperent"
                    android:gravity="center"
                    android:padding="@dimen/view_space_1_5"
                    android:text="@string/events"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_14" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/view_space_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back"
            style="@style/img_back_arrow_bottom"
            android:onClick="onClick"
            android:src="@drawable/img_back_map" />
    </RelativeLayout>
</RelativeLayout>