<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/secondary_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/txt_size_20"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/txt_size_20"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edt_yellow">

        <TextView
            android:id="@+id/txt_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/view_space_30"
            android:layout_marginEnd="@dimen/view_space_30"
            android:gravity="center"
            android:maxLines="10"
            android:padding="@dimen/view_space_3"
            android:text="وَالَّذِينَ يُؤْمِنُونَ بِمَا أُنْزِلَ إِلَيْكَ وَمَا أُنْزِلَ مِنْ قَبْلِكَ وَبِالْآخِرَةِ هُمْ يُوقِنُونَ"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_size_20" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/txt_size_20"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/txt_size_20"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edt_yellow">

        <RelativeLayout
            android:id="@+id/relative_whole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/main_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="@dimen/txt_size_16"
                    android:text="1"
                    android:textSize="@dimen/view_space_15"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/imagelienar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_play_pause"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_below="@+id/view_divider"
                        android:layout_alignParentEnd="true"
                        android:padding="5dp"
                        android:src="@drawable/symbol_301_1" />

                    <ImageView
                        android:id="@+id/img_like"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_below="@+id/view_divider"
                        android:layout_alignParentEnd="true"
                        android:padding="5dp"
                        android:src="@drawable/rate_star_button" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_arabic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagelienar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/view_space_30"
                    android:layout_marginEnd="@dimen/view_space_30"
                    android:gravity="center"
                    android:maxLines="10"
                    android:padding="@dimen/view_space_3"
                    android:text="وَالَّذِينَ يُؤْمِنُونَ بِمَا أُنْزِلَ إِلَيْكَ وَمَا أُنْزِلَ مِنْ قَبْلِكَ وَبِالْآخِرَةِ هُمْ يُوقِنُونَ"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/txt_size_20" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_arabic_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/view_space_30"
                    android:layout_marginEnd="@dimen/view_space_30"
                    android:layout_marginBottom="@dimen/view_space_10"
                    android:gravity="center"
                    android:maxLines="10"
                    android:padding="@dimen/view_space_3"
                    android:text="This is The Book free of doubt and involution, a guidance for those who preserve themselves from evil and follow the straight path"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>