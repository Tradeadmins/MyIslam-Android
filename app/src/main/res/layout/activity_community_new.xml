<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:paddingTop="@dimen/base_activity_top_space">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlt_bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn_prayer_req"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btn_mosque"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_yellow">

                    <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mosque_new" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="2dp"
                        android:background="@color/colorBlackTransperent"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/mosque"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_yellow">

                    <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/res_new" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="2dp"
                        android:background="@color/colorBlackTransperent"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/restaurant"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_prayer_req"
                android:layout_width="match_parent"
                android:layout_height="@dimen/community_height"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_btn_yellow">

                <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/prayer_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    android:background="@color/colorBlackTransperent"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/prayer_request"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btn_prayer_req"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btn_qurbani"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_yellow">

                    <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/quarbani_new" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="2dp"
                        android:background="@color/colorBlackTransperent"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/qurbani"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_yellow">

                    <com.krishiv.myislam.utils.ui.RoundRectCornerImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/events_new" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="2dp"
                        android:background="@color/colorBlackTransperent"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/events"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrow_back"
                style="@style/img_back_arrow_bottom"
                android:onClick="onClick"
                android:src="@drawable/img_back_map" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>