<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_edt_yellow"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/lnr_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name_arabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="نَمْحَّ الر"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_name_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Ar-Rahmaan"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_weight="0.7"
            android:id="@+id/txt_name_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="The Beneficent
He who wills goodness and
mercy for all His creatures"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/lnr_name"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_below="@+id/view_divider"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:text="1"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view_divider"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:src="@drawable/rating_icon" />

</RelativeLayout>