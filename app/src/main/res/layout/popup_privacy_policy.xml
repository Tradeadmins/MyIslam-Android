<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_gray">

        <TextView
            android:id="@+id/txt_title"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Privacy Policy Notice"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_desc"
            android:padding="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/privacy_policy_desc"
            android:textSize="18sp" />

        <View
            android:layout_marginTop="15dp"
            android:background="@color/colorDarkGray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/btn_more"
                android:textSize="18sp"
                android:textColor="@color/colorBlue"
                android:textAllCaps="false"
                android:layout_toLeftOf="@+id/view_divider"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_read_more" />

            <View
                android:id="@+id/view_divider"
                android:layout_centerInParent="true"
                android:background="@color/colorDarkGray"
                android:layout_width="1dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_accept"
                android:textSize="18sp"
                android:textColor="@color/colorBlue"
                android:textAllCaps="false"
                android:layout_toRightOf="@+id/view_divider"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_i_accept" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>