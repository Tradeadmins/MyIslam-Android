<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:paddingTop="@dimen/base_activity_top_space">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/makkah" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/black_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/your_spiritual_journey_simplified"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_above="@+id/img_find_pilgrim"
        android:layout_marginStart="@dimen/view_space_10"
        android:layout_marginEnd="@dimen/view_space_10"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_start_preparation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edt_yellow"
            android:gravity="center"
            android:onClick="onClick"
            android:textColor="@color/colorBlack"
            android:padding="20dp"
            android:text="@string/start_preparation"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_pilgrimage_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edt_yellow"
            android:gravity="center"
            android:onClick="onClick"
            android:textColor="@color/colorBlack"

            android:padding="20dp"
            android:text="@string/pilgrimage_guide"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:src="@drawable/find_pilgrim"
        android:id="@+id/img_find_pilgrim"
        android:layout_marginTop="@dimen/view_space_3"
        android:layout_marginBottom="@dimen/view_space_3"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txt_find_pilgrimage"
        android:layout_width="@dimen/img_social_width"
        android:layout_height="@dimen/img_social_width" />

    <TextView
        android:id="@+id/txt_find_pilgrimage"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edt_yellow"
        android:gravity="center"
        android:onClick="onClick"
        android:textColor="@color/colorBlack"

        android:padding="20dp"
        android:text="@string/feature_coming_soon"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rlt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back"
            style="@style/img_back_arrow_bottom"
            android:onClick="onClick"
            android:src="@drawable/img_back_map" />
    </RelativeLayout>

</RelativeLayout>