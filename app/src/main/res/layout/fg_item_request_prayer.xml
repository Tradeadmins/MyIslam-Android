<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="10dp"
    android:background="@drawable/bg_edt_yellow"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/txt"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:text="The concept of “Tawheed” is the most fundamental concept of Islam as a religion and one that each and every muslim should subscribe to. Every Muslim should believe in the one true God alone and should not worship any deity other than Allah."
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_divider"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorDarkGray"></View>


    <LinearLayout
        android:layout_alignParentStart="true"
        android:id="@+id/lnr_isduamake"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/view_divider"
        android:background="@drawable/bg_btn_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_heart"
            android:padding="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:text="@string/make_a_dua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/view_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_group_profile_users"
            android:padding="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/txt_duas"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:text="3k Duas"
            android:textColor="@color/colorDarkDuas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>