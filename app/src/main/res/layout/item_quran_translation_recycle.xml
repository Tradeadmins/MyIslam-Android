<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/txt_size_20"
    android:layout_marginTop="5dp"
    android:layout_marginRight="@dimen/txt_size_20"
    android:layout_marginBottom="10dp"
    android:gravity="left|center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagelienar"
                android:paddingLeft="@dimen/view_space_3"
                android:paddingTop="@dimen/view_space_3"
                android:paddingRight="@dimen/view_space_3"
                android:text="وَبِالْآخِرَةِ هُمْ يُوقِنُونَ"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/txt_language_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/view_space_3"
                android:paddingTop="2sp"
                android:paddingRight="@dimen/view_space_3"
                android:paddingBottom="2sp"
                android:text="This is The "
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_size_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:tint="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"></LinearLayout>
</LinearLayout>