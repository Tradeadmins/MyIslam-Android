<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_names_of_allah"
    android:paddingTop="@dimen/base_activity_top_space">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/prophet_mohammed_final_msg"
        android:textColor="@color/colorYellow"
        android:textSize="@dimen/txt_size_18" />

    <RelativeLayout
        android:layout_below="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlt_bottom"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/bg_edt_yellow">



            <WebView
                android:background="@android:color/transparent"
                android:id="@+id/simpleWebView"
                android:scrollbarThumbVertical="@color/colorScrollIndicator"
                android:scrollbarSize="8dp"
                android:paddingEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back"
            style="@style/img_back_arrow_bottom"
            android:onClick="onClick"
            android:src="@drawable/img_back_map" />
    </RelativeLayout>

</RelativeLayout>